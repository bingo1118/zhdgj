<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/alarm_back"
    >

    <RelativeLayout
        android:id="@+id/alarm_fk_center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.smart.cloud.fire.view.MyImageView
            android:id="@+id/alarm_fk_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="center"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/alarm_light"/>
        <ImageView
            android:id="@+id/alarm_music_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/bj_yl"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/alarm_tc_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baojing_tc_selector"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/stop_alarm"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/alarm_lead_to_btn"
            android:layout_marginRight="20dp"
            android:background="@drawable/alarm_upload" />
        <Button
            android:id="@+id/alarm_lead_to_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/alarm_daohang"/>
    </LinearLayout>



    <TextView
        android:id="@+id/alarm_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="火灾报警"
        android:textColor="@color/hj_color_text"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/alarm_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="mac:"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2016-08-25 15:15:51"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/alarm_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/hj_color_text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/lin_principal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/principal"/>
            <TextView
                android:id="@+id/alarm_smoke_mark_principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王老五"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_phone_lin_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/alarm_smoke_mark_phone_image"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/yg_phone" />
            <TextView
                android:id="@+id/alarm_smoke_mark_phone_tv"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12548454848"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/lin_principa2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/principal"/>
            <TextView
                android:id="@+id/smoke_mark_principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王老五"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_lin_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/smoke_mark_phone_image"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/yg_phone" />
            <TextView
                android:id="@+id/smoke_mark_phone_tv"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12548454848"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>