<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/add_camera_one_image"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/add_camera_1"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_camera_one_image"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:lineSpacingExtra="3.0dp"
        android:layout_centerHorizontal="true"
        android:text="@string/add_camera_first"
        />
    <TextView
        android:layout_above="@+id/add_camera_action_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dao_hang_bian_color"/>
    <Button
        android:id="@+id/add_camera_action_one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:text="@string/next"
        android:textSize="20sp"
        android:background="@drawable/next_button_selector"
        />
</RelativeLayout>