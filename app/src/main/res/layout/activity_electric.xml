<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_fresh_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <include layout="@layout/title_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:background="@color/blue">
                <RelativeLayout
                    android:id="@+id/dy_rela"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dy_text"
                        android:text="--V"
                        android:textSize="32sp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/dy_text">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="电压"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/dy_text"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="--V"
                            android:id="@+id/dy_low"
                            android:layout_marginRight="3dp"/>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="--℃"
                            android:id="@+id/dy_top"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:background="@color/blue">
                <RelativeLayout
                    android:id="@+id/dl_rela"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dl_text"
                        android:text="--A"
                        android:textSize="32sp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/dl_text">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="电流"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/dl_text"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff8f41"
                            android:text="Max:"
                            android:layout_marginLeft="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="--A"
                            android:id="@+id/dl_top"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blue">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@color/blue">
                <RelativeLayout
                    android:id="@+id/ldl_rela"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ldl_text"
                        android:text="--mA"
                        android:textSize="32sp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/ldl_text">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:text="漏电流"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/ldl_text"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff8f41"
                            android:text="Max:"
                            android:layout_marginLeft="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="--mA"
                            android:id="@+id/ldl_top"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设备详情"
                android:gravity="center"/>
            <TextView
                android:id="@+id/dev_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/dev_areaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="区域:"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/dev_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地址:"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/progress_bar"/>
</android.support.v4.widget.SwipeRefreshLayout>