<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoke_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/login_btn"
        >
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_title"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/close_image_dialog"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/close"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/smoke_mark_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/map_lb_zjq"/>
            <TextView
                android:id="@+id/smoke_mark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/smoke_mark_image"
                android:layout_marginLeft="10dp"
                android:text="的实际付款就安家费"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/line_stutes_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/map_lb_lj"
                    />
                <TextView
                    android:id="@+id/line_stutes_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/line_stutes_image"
                    android:text="已连接"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/smoke_mark_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="撒的发开发和卡号"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/principal"/>
                <TextView
                    android:id="@+id/smoke_mark_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王老五"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_lin_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/smoke_mark_phone_image"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/yg_phone" />
                <TextView
                    android:id="@+id/smoke_mark_phone_tv"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12548454848"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/principal"/>
                <TextView
                    android:id="@+id/smoke_mark_principal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王老五"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_lin_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/smoke_mark_phone_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/yg_phone" />
                <TextView
                    android:id="@+id/smoke_mark_phone_tv2"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12548454848"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/smoke_bian_color"/>

    <com.smart.cloud.fire.utils.RefreshListView
        android:id="@+id/somake_mark_refreshlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#ffffff"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:background="@color/smoke_dialog_list_bg"
        android:listSelector="#00000000"
        >
    </com.smart.cloud.fire.utils.RefreshListView>
</LinearLayout>