<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/alpha">
        <TextView
            android:id="@+id/alarm_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:text="2016-08-04 17:29:56"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/smoke_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e9393d"
                    android:text="@string/smoke_name"/>
                <TextView
                    android:id="@+id/smoke_mac_tv"
                    android:layout_toRightOf="@id/smoke_mac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textColor="#e9393d"
                    android:layout_marginLeft="5dp"
                    android:text="HJKDSA545FD"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/alarm_mark_image"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/xx_huojing"/>
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/mac_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="#404040"
                android:text="ID:"/>
            <TextView
                android:id="@+id/repeater_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="#404040"
                android:text="广东省广州市天河区"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <RelativeLayout
                    android:id="@+id/zjq_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/repeater_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#404040"
                        android:text="@string/repeater_name"/>
                    <TextView
                        android:id="@+id/repeater_name_tv"
                        android:layout_toRightOf="@id/repeater_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#404040"
                        android:layout_marginLeft="5dp"
                        android:text="HJKDSA545FD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/zjq_mac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/repeater_mac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#404040"
                        android:text="@string/repeater_mac"/>
                    <TextView
                        android:id="@+id/repeater_mac_tv"
                        android:layout_toRightOf="@id/repeater_mac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#404040"
                        android:layout_marginLeft="5dp"
                        android:text="HJKDSA545FD"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/principal"/>
                    <TextView
                        android:id="@+id/user_smoke_mark_principal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王老五"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_phone_lin_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/user_smoke_mark_phone_image"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@drawable/yg_phone" />
                    <TextView
                        android:id="@+id/user_smoke_mark_phone_tv"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12548454848"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/principal"/>
                    <TextView
                        android:id="@+id/user_smoke_mark_principal_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王老五"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_phone_lin_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/user_smoke_mark_phone_image_two"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@drawable/yg_phone" />
                    <TextView
                        android:id="@+id/user_smoke_mark_phone_tv_two"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12548454848"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dadada"/>

    <LinearLayout
        android:id="@+id/action_alarm_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@drawable/list_item_color_bg">
        <TextView
            android:id="@+id/deal_alarm_action_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lead_regiater"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="取消报警"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/action_now_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lead_regiater"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/action_tv"
            android:visibility="visible"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dadada"/>

</LinearLayout>