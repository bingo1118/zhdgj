<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/smoke_dialog_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="爱的说法发发生发的发的"/>
        <TextView
            android:id="@+id/smoke_dialog_stute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/smoke_dialog_tv2"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:textColor="@color/smoke_dialog_list_tv_lx"
            android:text="@string/off_line_tv"/>
        <TextView
            android:id="@+id/smoke_dialog_tv3"
            android:layout_below="@id/smoke_dialog_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:text="弟弟弟顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/smoke_dialog_list_mb"/>
</RelativeLayout>