<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_gravity="center"
	android:background="@drawable/modify_dialog"
	>
	<RelativeLayout
		android:id="@+id/dialog_title"
		android:layout_width="match_parent"
		android:layout_height="30dp"
		>
		<TextView
			android:id="@+id/title_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_centerInParent="true"
			android:layout_marginLeft="10dp"
			android:textSize="15sp"
			android:textColor="#000000"
			android:text="删除账号"
			android:textStyle="bold"
			/>
	</RelativeLayout>
	<ImageView
		android:id="@+id/separator"
		android:layout_width="match_parent"
		android:src="@drawable/list_item_line"
		android:layout_height="wrap_content"

		android:scaleType="center"
		/>
	<RelativeLayout
		android:id="@+id/dialog_content"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		>
		<WebView
			android:id="@+id/content_text"
			android:background="@drawable/modify_dialog"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:layout_margin="5dp"
			/>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		>
		<RelativeLayout
			android:id="@+id/cancel_rela_dialog"
			android:layout_width="1dp"
			android:layout_weight="1"
			android:layout_height="match_parent"
			>
			<TextView
				android:id="@+id/button1_text"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="3dp"
				android:textSize="15sp"
				android:textColor="#52a0e0"
				android:gravity="center"
				android:text="删除"
				android:layout_centerInParent="true"
				android:textStyle="bold"
				android:background="@drawable/selector_list_dialog_item"
				/>
		</RelativeLayout>
		<ImageView
			android:id="@+id/minddle_image"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@drawable/btn_line"
			/>
		<RelativeLayout
			android:layout_width="1dp"
			android:layout_weight="1"
			android:layout_height="match_parent"
			>
			<TextView
				android:id="@+id/button2_text"
				android:text="取消"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="3dp"
				android:textSize="15sp"
				android:textColor="#52a0e0"
				android:gravity="center"
				android:textStyle="bold"
				android:layout_centerInParent="true"
				android:background="@drawable/selector_list_dialog_item"
				/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
