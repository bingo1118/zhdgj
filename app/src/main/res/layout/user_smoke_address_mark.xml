<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/user_smoke_dialog_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="烟感"/>
            <TextView
                android:id="@+id/user_smoke_dialog_stute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_smoke_dialog_tv2"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textColor="@color/smoke_dialog_list_tv_lx"
                android:text="@string/off_line_tv"/>
            <TextView
                android:id="@+id/user_smoke_dialog_tv4"
                android:layout_below="@id/user_smoke_dialog_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="ID:"/>
            <TextView
                android:id="@+id/user_smoke_dialog_tv6"
                android:layout_below="@id/user_smoke_dialog_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="设备类型:"/>
            <TextView
                android:id="@+id/user_smoke_dialog_tv5"
                android:layout_below="@id/user_smoke_dialog_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="区域:"/>
            <TextView
                android:id="@+id/user_smoke_dialog_tv3"
                android:layout_below="@id/user_smoke_dialog_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="广州市"/>


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/contact1_lin"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/principal"/>
                <TextView
                    android:id="@+id/user_smoke_mark_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王老五"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_phone_lin_one"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/user_smoke_mark_phone_image"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/yg_phone" />
                <TextView
                    android:id="@+id/user_smoke_mark_phone_tv"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12548454848"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact2_lin"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/principal"/>
                <TextView
                    android:id="@+id/user_smoke_mark_principal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王老五"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_phone_lin_two"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/user_smoke_mark_phone_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/yg_phone" />
                <TextView
                    android:id="@+id/user_smoke_mark_phone_tv2"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/smoke_bian_color"/>
    <Button
        android:id="@+id/normal_lead_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/login_button_selector"
        android:layout_marginTop="10dp"
        android:text="@string/lead_to_btn"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>