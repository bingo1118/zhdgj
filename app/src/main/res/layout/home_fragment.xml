<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f6"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/title_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/homefragment_banner"/>


    <ImageView
        android:id="@+id/more_item"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/my_center"
        android:layout_margin="10dp"
        android:visibility="gone"/>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15dp">

        <TableRow
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/nfc_devinfo_shape">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/add_dev"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/home_add"
                    android:padding="16dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_dev"
                    android:textColor="#cecece"
                    android:layout_centerHorizontal="true"
                    android:text="添加设备"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/nfc_devinfo_shape">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/alarm_msg"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_alarm_msg"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alarm_msg"
                    android:textColor="#cecece"
                    android:layout_centerHorizontal="true"
                    android:text="报警信息"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/nfc_devinfo_shape">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/electr"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_team"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/electr"
                    android:textColor="#cecece"
                    android:layout_centerHorizontal="true"
                    android:text="电气设备"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/nfc_devinfo_shape">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/map"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_map_white"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map"
                    android:textColor="#cecece"
                    android:layout_centerHorizontal="true"
                    android:text="地图信息"/>
            </RelativeLayout>
        </TableRow>



    </TableLayout>
</LinearLayout>
