<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f6"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="首页"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/home_top_back"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/top1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/home_top_text1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_below="@id/top1"
            android:layout_marginTop="10dp"
            android:src="@drawable/home_top_text2"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:src="@drawable/home_top_text3"/>

    </RelativeLayout>






    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TableRow
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/nfc_devinfo_shape">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/add_dev"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/home_add"
                    android:padding="16dp"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_dev"
                    android:textColor="@color/Black"
                    android:layout_centerHorizontal="true"
                    android:text="添加设备"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/nfc_devinfo_shape">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/alarm_msg"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_alarm_msg"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alarm_msg"
                    android:textColor="@color/Black"
                    android:layout_centerHorizontal="true"
                    android:text="报警信息"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/nfc_devinfo_shape">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/electr"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_team"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/electr"
                    android:textColor="@color/Black"
                    android:layout_centerHorizontal="true"
                    android:text="电气设备"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/nfc_devinfo_shape">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/map"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_map_white"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map"
                    android:textColor="@color/Black"
                    android:layout_centerHorizontal="true"
                    android:text="地图信息"/>
            </RelativeLayout>
        </TableRow>



    </TableLayout>
</LinearLayout>
