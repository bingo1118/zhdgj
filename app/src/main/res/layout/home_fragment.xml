<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <!-- title bar -->
    <include android:id="@+id/title_include" layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_title"
            android:layout_margin="20dp"/>
    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e6e6">

        <TableRow
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/add_dev"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/add_dev_6"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_dev"
                    android:textColor="#8a8a8a"
                    android:layout_centerHorizontal="true"
                    android:text="添加设备"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/electr"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/electr_6"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/electr"
                    android:textColor="#8a8a8a"
                    android:layout_centerHorizontal="true"
                    android:text="电气设备"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/camera"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/camera_6"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/camera"
                    android:textColor="#8a8a8a"
                    android:layout_centerHorizontal="true"
                    android:text="视频监控"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/map"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/map_6"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map"
                    android:textColor="#8a8a8a"
                    android:layout_centerHorizontal="true"
                    android:text="地图位置"/>
            </RelativeLayout>
        </TableRow>



    </TableLayout>
</LinearLayout>
