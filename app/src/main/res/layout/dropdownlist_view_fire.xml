<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/compound"
    android:background="@drawable/edit_view_bg" >
    
    <EditText
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color_text"
        android:padding="5dp"
        android:editable="false"
        android:textSize="14sp"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:singleLine="true"/>
    <ImageView 
        android:id="@+id/btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/dropdown"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:gravity="center"/>
    <ProgressBar
        android:id="@+id/loading_prg_monitor"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress_monitor_waite"
        android:indeterminateDuration="560000" />
    <RelativeLayout
        android:id="@+id/clear_choice"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_alignParentRight="true">
        <ImageView
            android:clickable="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/shanchu_selector"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</RelativeLayout>