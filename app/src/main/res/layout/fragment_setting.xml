<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back">

    <include layout="@layout/progress_bar"/>

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="center"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/setting_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1236456456"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/setting_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="50dp"
        android:visibility="gone"
        android:src="@drawable/person"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_account_and_psw_shape"
        android:layout_below="@id/rela"
        android:orientation="vertical"
        android:padding="5dp">


        <RelativeLayout
            android:id="@+id/setting_help_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@drawable/list_item_color_bg">
            <ImageView
                android:id="@+id/rela_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/zh_guanyu"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_toRightOf="@id/rela_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/camera_list_tv"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dao_hang_bian_color"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_help_rela"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_color_bg"
            android:layout_height="45dp"
            android:padding="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dao_hang_bian_color"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_camera_relative"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_color_bg"
            android:visibility="gone"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/rela_camera_image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/zh_bz"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_toRightOf="@id/rela_camera_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bind_camera"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/camera_list_tv"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dao_hang_bian_color"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_update"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/list_item_color_bg"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统更新"
                android:layout_centerVertical="true"
                android:textColor="@color/Black" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dao_hang_bian_color"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/setting_help_exit"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="退出账号"
        android:textColor="@color/tab_text_selected"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loginout_shape" />

</RelativeLayout>