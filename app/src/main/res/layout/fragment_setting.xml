<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <include layout="@layout/progress_bar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="center"
        android:background="@drawable/me_top" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/setting_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1236456456"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_below="@id/setting_image"
            android:layout_centerHorizontal="true"/>



    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_account_and_psw_shape"
        android:layout_below="@id/setting_user_id"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:padding="5dp">




        <LinearLayout
        android:id="@+id/setting_account_manage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_edit_back"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@drawable/me_user"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号管理"
            android:layout_centerVertical="true"
            android:textColor="@color/Black" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/lead_right_zx"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_area_manage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edit_back"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/me_team"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="区域管理"
                android:layout_centerVertical="true"
                android:textColor="@color/Black" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_help_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edit_back"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/me_exit"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="注销"
                android:layout_centerVertical="true"
                android:textColor="@color/Black" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </LinearLayout>



        <RelativeLayout
            android:id="@+id/setting_help_rela"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_color_bg"
            android:layout_height="45dp"
            android:visibility="gone"
            android:padding="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dao_hang_bian_color"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_camera_relative"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_color_bg"
            android:visibility="gone"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/rela_camera_image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/zh_bz"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_toRightOf="@id/rela_camera_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bind_camera"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/camera_list_tv"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dao_hang_bian_color"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/setting_help_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_item_color_bg"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:layout_centerVertical="true"
                android:textColor="@color/Black" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lead_right_zx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dao_hang_bian_color"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/app_update"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/line"
        android:layout_margin="30dp"
        android:background="@drawable/me_update" />


</RelativeLayout>