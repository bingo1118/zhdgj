<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/add_camera_three_image"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/add_camera_3"
        />

    <RelativeLayout
        android:id="@+id/wifi_rela"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_camera_three_image">
        <ImageView
            android:id="@+id/wifi_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/lct_sxt_wifi"/>
        <TextView
            android:id="@+id/camera_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wifi_image"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="HRSST"
            android:textSize="18sp"
            />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/camera_wifi_pwd_rela"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wifi_rela"
        android:background="@drawable/edit_view"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/camera_wifi_pwd"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:hint="输入wifi密码"
            android:textColorHint="@color/hint_color_text"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_wifi_pwd_rela"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:lineSpacingExtra="3.0dp"
        android:layout_centerHorizontal="true"
        android:text="@string/add_camera_third"
        />
    <TextView
        android:layout_above="@+id/next_add_camera_second_btn"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dao_hang_bian_color"/>

    <Button
        android:id="@+id/next_add_camera_second_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:text="@string/next"
        android:textSize="20sp"
        android:background="@drawable/next_button_selector"/>
</RelativeLayout>