<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    只有上下边框的shape    -->

    <item>
        <shape>
            <!--    边框颜色    -->
            <solid android:color="@color/action_now_color"/>
        </shape>
    </item>
